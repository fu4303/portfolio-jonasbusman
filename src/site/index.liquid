---
layout: layout.liquid
pageTitle: Welcome to my blog
---

<div class="flex flex-wrap">
  {% for post in collections.entries reversed %}
    {% if post.data.photos.size > 0 %}
      {% assign photo = post.data.photos | first %}
    {% else %}
      {% assign photo = false %}
    {% endif %}
  <div class="flex-auto m-3 w-3/12">
    <div class="ar-3x2">
      <div class="absolute bg-cover bg-yellow-200 h-full left-0 top-0 w-full" style="background-image: url({% image_url photo %})">
        <h2 class="text-2xl">
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        <em>{{ post.date | date: "%Y-%m-%d" }}</em>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
