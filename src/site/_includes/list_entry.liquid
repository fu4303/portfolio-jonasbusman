{% if post.data.photos.size > 0 %}
  {% assign photo = post.data.photos | first %}
{% else %}
  {% assign photo = false %}
{% endif %}
<div class="flex-auto w-full md:w-1/2 lg:w-1/2 xl:w-1/3 2-xl:w-3/12 ">
  <div class="m-3 shadow-lg">
    <div class="ar-3x2">
      <a
      href="{{ post.url }}"
        class="absolute bg-cover bg-cabaret-500 h-full left-0 top-0 w-full rounded"
        style="background-image: url({% image_url photo %})"
      >
        <div class="text-gray-100 px-4 inset-0 absolute flex flex-col justify-center text-center rounded {% if photo %}bg-gray-700 bg-opacity-25{% endif %}">
          <h2 class="text-3xl md:text-5xl font-black leading-none">
            {{ post.data.title }}
          </h2>
          <time
            datetime="{{ post.date | date: "%Y-%m-%d" }}"
            class="font-bold"
          >
            {{ post.date | date: "%Y-%m-%d" }}
          </time>
        </div>
      </a>
    </div>
  </div>
</div>
